<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_background"
        android:orientation="vertical"
        android:backgroundTint="@color/white">

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <include
            android:layout_marginTop="50dp"
            android:id="@+id/homeAvatar"
            layout="@layout/fragment_avatar"

            android:layout_width="200dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/creerSalon"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="CrÃ©er un Salon"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/profilbutton"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="profil"
            android:textColor="@color/main_color"
            app:backgroundTint="@color/white" />


        <Button
            android:id="@+id/recompense"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="recompenses"
            android:textColor="@color/main_color"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/deconnection"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Deconnexion"
            android:textColor="@color/main_color"
            app:backgroundTint="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_background"
        android:orientation="vertical"
        android:backgroundTint="@color/white">

        <include
            android:id="@+id/chatfragment"
            layout="@layout/chatfragment" />



    </LinearLayout>
</LinearLayout>

</RelativeLayout>