<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="création d'équipe de collaboration"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/errorTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red" />

        <EditText
            android:id="@+id/teamName"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:width="40sp"
            android:ems="10"
            android:hint=" nom du dessin"
            android:inputType="textPersonName"
            android:textColor="#808080"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nbCollaborators"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:width="40sp"
            android:ems="10"
            android:hint=" Nombre maximal de collaborateur"
            android:inputType="number"
            android:textColor="#808080"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bioFieldEntry"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="bio de l'équipe"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spOptionTeam"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/resultTeamVisibility"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/teamPassword"
                android:layout_width="229dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:width="40sp"
                android:ems="10"
                android:hint="mot de passe"
                android:visibility="invisible"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#808080"
                android:textSize="20sp" />
            <Button
                android:id="@+id/createTeam"
                android:layout_width="229dp"
                android:layout_height="50dp"
                android:enabled="false"
                android:clickable="false"
                android:text="creer une équipe"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

