<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".team.TeamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <TextView
            android:id="@+id/teamNameTeamActivity"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Nom de l'équipe"
            android:textSize="30sp"
            android:textStyle="bold"
        />
        <LinearLayout
            android:layout_height="90dp"
            android:layout_width="wrap_content"
            android:gravity="right">
            <ImageButton
                android:id="@+id/createTeamTeamButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Créer un Salon"
                android:src="@drawable/add_group"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                app:backgroundTint="@color/white"
                android:tooltipText="@string/createTeam"/>
            <ImageButton
                android:id="@+id/createDrawingTeamButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/add"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                app:backgroundTint="@color/white"
                android:tooltipText="@string/createDrawing"/>
            <ImageButton
                android:id="@+id/profileButtonTeamPage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                app:backgroundTint="@color/white"
                android:tooltipText="@string/profile"/>
            <ImageButton
                android:id="@+id/showChatTeamPage"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:src="@drawable/chat"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                app:backgroundTint="@color/white"
                android:tooltipText="@string/chat"/>
            <Button
                android:id="@+id/showBio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Afficher le bio"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                app:backgroundTint="@color/white"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="940dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_background"
                android:orientation="vertical"
                android:backgroundTint="@color/white">
                <FrameLayout
                    android:id="@+id/galleryFrameTeamPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_background"
                android:orientation="vertical"
                android:backgroundTint="@color/white">
                <FrameLayout
                    android:id="@+id/usersAndTeamsFrameTeamPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
