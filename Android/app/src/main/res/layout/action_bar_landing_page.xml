<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="fill">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/new_logo1"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:textColor="@color/main_color"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageButton
                android:id="@+id/createDrawingHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_add_circle_24"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:tooltipText="@string/createDrawing"/>

            <ImageButton
                android:id="@+id/createTeamHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_group_add_24"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                android:tooltipText="@string/createTeam"/>

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:tooltipText="@string/profile"/>

            <ImageButton
                android:id="@+id/showChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_message_24"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:tooltipText="@string/chat"/>

            <ImageButton
                android:id="@+id/disconnect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:textColor="@color/main_color"
                android:tooltipText="@string/disconnect"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
